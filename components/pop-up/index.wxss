@import "/utils/iconfont.wxss";
.pop_bg{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.8);
    z-index: 111;
}
.pop_box{
    position: relative;
    width: 600rpx;
    top: 70rpx;
    
}
.pop{
    width: 600rpx;
    box-sizing: border-box;
    padding: 0 32rpx 46rpx 32rpx;
    background: #fff;
    border-radius:16rpx ;
}
.pop_title{
    padding: 28rpx 0;
    position: relative;
    border-bottom: .5rpx solid #E9E9E9;
}
.title{
    text-align: center;
    font-size: 28rpx;
    color: #202020;
    font-weight: bold;
}
.iconchahao1{
    position: absolute;
    top: 28rpx;
    right: 0;
    color: #B6B6B6;
}
button{
    width: 284rpx !important;
    height: 66rpx;
    font-size: 24rpx;
    text-align: center;
    line-height: 66rpx;
    color: #fff;
    border: 0;
    padding: 0;
    background:rgba(255,172,69,1);
    margin-top: 24rpx;
    font-weight: normal;
}



.areas{
    width: 498rpx;
    height: 114rpx;
    box-sizing: border-box;
    padding: 14rpx 12rpx;
    margin:78rpx auto 58rpx auto;
    border:1px solid rgba(247,247,247,1);
    border-radius:8px;
    font-size: 24rpx;
}
.areas_placeholder{
    color: #CDCDCD !important;
}