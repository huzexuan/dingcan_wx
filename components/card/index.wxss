.order_card{
    width: calc(100% - 32rpx);
    margin:16rpx auto 0 auto;
    background: #fff;
    overflow: hidden;
    border-radius: 8rpx;
}
.order{
    padding: 0 14rpx 0 38rpx;
    position: relative;
    border-bottom: 1px dashed #DCDCDC;
}
.kind{
    width: 110rpx;
    height: 52rpx;
    text-align: center;
    line-height: 52rpx;
    color: #fff;
    position: absolute;
    top: 0;
    right: 0;
    font-size: 24rpx;
}
.food_name_text{
    width: 490rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.order_determined{
    padding: 28rpx 0;
    border-bottom: 1px solid #F5F5F5;
}
.order_time{
    font-size: 24rpx;
    color: #7D7D7D;
}
.order_del{
    margin: 32rpx 0;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    position: relative;
}
.item_name>view:nth-child(2),.order_num>view:nth-child(2){
    margin: 32rpx 0;
}
.item_name{
    margin-right: 32rpx;
    color: #C6C6C6;
}
.order_num{
    color: #7D7D7D;
}
.order_num>view:last-child{
    color: #FE3D51;
    font-size: 32rpx;
    font-weight: bold;
}
.type_img{
    width: 194rpx;
    height: 156rpx;
    position: absolute;
    top: 15rpx;
    right: 26rpx;
}
.order_operation{
    /* height: 88rpx; */
    padding: 14rpx 24rpx ;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}
.operation{
    width: 140rpx;
    height: 56rpx;
    box-sizing: border-box;
    border-radius: 4rpx;
    border:  1px solid #FF413C;
    color: #FE3D51;
    font-size: 24rpx;
    text-align: center;
    line-height: 56rpx;
}
.take_btn{
    width: 140rpx;
    height: 56rpx;
    background: #FF4343;
    text-align: center;
    line-height: 56rpx;
    font-size: 24rpx;
    color: #fff;
    border-radius: 4rpx;
}
.take_text{
    margin: 10rpx 0;
    color: #FF9CA6;
    font-size: 28rpx;
    font-weight: 400;
}
.examine{
    width: 140rpx;
    height: 56rpx;
    background: #70DB00;
    text-align: center;
    line-height: 56rpx;
    font-size: 24rpx;
    color: #fff;
    border-radius: 4rpx;
}
.noOrder_hint{
    position: absolute;
    left: 330rpx;
    top: 300rpx;
    font-size: 24rpx;
    color:#C6C6C6 ;
}
.card_type>view{
    color: #C6C6C6;
}
.card_type>view:last-child{
    color: #545454;
}
.no_more{
    padding: 30rpx 0 60rpx 0;
    text-align: center;
    font-size: 24rpx;
    color:#C6C6C6 ;
}