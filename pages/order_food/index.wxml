<view class="box_title"> 
    <view>工作餐</view>
    <view bind:tap="overtime">申请加班餐</view>
</view>
<view class="at_food" wx:for="{{ list }}" wx:key='this' wx:if="{{ item.is_selected == 1 }}">
    <view>当前可定餐（点击下单订餐）</view>
    <view>{{ item.lunch }}</view>
</view>
<view class="box_title"> 
    <view>每日用餐列表</view>
</view>
<view class="table">
    <view class="table_tr">
        <view>日期</view>
        <view>午餐</view>
        <view>晚餐</view>
    </view>
    <view class="table_tb {{ item.is_selected == 1?'at_table':''}}" wx:for="{{ list }}" wx:key="this" >
        <view>{{ item.week }}</view>
        <view style="{{item.lunch.length <13 ?'line-height: 82rpx;padding: 0 20rpx':'padding: 20rpx;'  }}">{{ item.lunch }}</view>
        <view style="{{item.dinner.length <13 ?'line-height: 82rpx;padding: 0 20rpx':'padding: 20rpx;'  }}">{{ item.dinner }}</view>
    </view>
</view>
<view class="shop">
    <image src="/img/shopping.png" class="shop_img"></image>
    <view class="order">
        <view class="order_pice">合计: <text>￥{{food_money}}</text></view>
        <view class="submit_order" bind:tap="submit_order">
            <view>去下单</view>
            <view>{{ start_time }}-{{ end_time }}可下单</view>
        </view>
    </view>
</view>
<!-- 预定午餐 -->
<pop-up show="{{ pop_show }}" title="预定午餐" btn_text="付款并订餐" bind:change="purchase" data-type="1">
    <view class="item">
        <view>订餐名称</view><view class="name"wx:for="{{ list }}" wx:key='this' wx:if="{{ item.is_selected == 1 }}">{{ item.lunch }}</view>
    </view>
    <view class="item">
        <view>实际付款</view><view class="pice">¥{{ food_money }}</view>
    </view>
    <textarea class="areas" placeholder='输入您的备注信息' placeholder-class="areas_placeholder" bindinput="lunch_areas"> 
    </textarea>
</pop-up>
<!-- 加班餐 -->
<pop-up show="{{ overtime_pop_show }}" title="申请加班餐" btn_text="提交申请" bind:change="purchase" data-type="2">
    <view class="item">
        <view>订餐名称</view><view class="name" wx:for="{{ list }}" wx:key='this' wx:if="{{ item.is_selected == 1 }}">{{ item.dinner }}</view>
    </view>
    <view class="item">
        <view>实际付款</view><view class="pice">¥{{ food_money }}</view>
    </view>
    <textarea class="areas" placeholder='输入您的备注信息' placeholder-class="areas_placeholder" bindinput="dinner_areas"> 
    </textarea>
</pop-up>