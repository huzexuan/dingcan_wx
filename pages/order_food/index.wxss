.box_title{
    width: 100%;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 40rpx 32rpx 24rpx 46rpx;
} 
.box_title:nth-child(1){
    padding-top: 46rpx;
    box-shadow: 0 17px 10px -5px rgba(247,247,247,1) inset;
}
.box_title>view:nth-child(1){
    color: #202020;
    font-size: 36rpx;
    font-weight: bold;
}
.box_title>view:nth-child(2){
    color: #7279FF;
    font-size: 24rpx;
}
.at_food{
    width: 602rpx;
    padding: 36rpx 10rpx;
    margin: auto;
    background:linear-gradient(131deg,rgba(255,186,74,1) 0%,rgba(255,104,0,1) 100%);
    border-radius: 14rpx;
    text-align: center;
}
.at_food>view:nth-child(1){
    color: #ffdec4;
    font-size: 20rpx;
    padding-bottom:20rpx;
}
.at_food>view:nth-child(2){
    color: #fff;
    font-size: 36rpx;
    font-weight: 500;
}
.table {
    padding: 0 60rpx;
  }
  .tr{
    display: flex;
    width: 100%;
    box-sizing: border-box;
    justify-content: center;
    align-items: center;
    border: 1px solid #EDEDED;
    border-bottom: 0;
  }
  .tr:nth-child(1){
      border: 0;
  }
  .tr:last-child{
    border-bottom: 1px solid #EDEDED;
    }
  .td {
      width:40%;
      box-sizing: border-box;
      justify-content: center;
      line-height: 1;
      text-align: center;
      font-size: 24rpx;
      color:#B4B4B4;
      border-left: 1px solid #EDEDED;
      height: 116rpx;
    padding: 10rpx;
  }
  .tr>.td:nth-child(1){
    width: 20%;
    color: #202020;
    font-weight: 500;
    border: 0;
    line-height: 96rpx;
}
.tr>.th:nth-child(1){
    width: 20%;
}
  .th {
    width: 40%;
    height: 100%;
    justify-content: center;
    padding-bottom: 24rpx;
    background: #fff;
    color: #202020;
    font-weight:500;
    font-size: 24rpx;
    display: flex;
    align-items: center;
  }
  .line>.td>view{
    overflow: hidden;
  }
.shop{
    width: 656rpx;
    height: 74rpx;
    background: #fff;
    border-radius:50rpx ;
    margin:42rpx auto 0;
    box-shadow:0px 1px 9px 0px rgba(179,179,179,0.27);
    position: relative;
}
.shop_img{
    width: 116rpx;
    height: 114rpx;
    display: block;
    position: absolute;
    left: -16rpx;
    top: -38rpx;
}
.order{
    margin-left: 130rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.order_pice{
    line-height:74rpx;
    color:#414141;
    font-size: 28rpx;
    font-weight: 400;
}
.order_pice text{
    font-size: 32rpx;
    font-weight: bold;
}

.submit_order{
    width: 182rpx;
    height: 74rpx;
    text-align: center;
    box-sizing: border-box;
    margin-top: -4rpx   ;
    padding: 14rpx 0;
    background: #FFAC45;
    border-radius: 0 50rpx 50rpx 0;
}
.submit_order>view{
    line-height: 1;
}
.submit_order>view:nth-child(1){
    font-size: 26rpx;
    margin-bottom: 4rpx;
    color: #fff;
}
.submit_order>view:nth-child(2){
    font-size: 16rpx;
    color:rgba(255,255,255,0.62);
}
.item{
    margin-top: 66rpx;
    display: flex;
    align-items: center;
}
.item>view:nth-child(1){
    margin: 0 32rpx 0 22rpx;
    color: #CDCDCD;
    font-size: 24rpx;
}
.item>view:nth-child(2){
    font-size: 32rpx;
    font-weight: bold;
}
.name{
    width: 70%;
    color: #FF7F34;
}
.pice{
    color: #FE3D51;
}
.is_selected .td{
    color:#FF7731 !important ;
}
.food{
    line-height: 1;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    overflow: hidden;
}
.text_lunchline,.text_dinnerline{
    line-height: 96rpx;
}