@import "/utils/iconfont.wxss";
/* 轮播图 */
.banner-bg {
  width: 100%;
  height: 230rpx;
  border-radius: 0 0 40rpx 40rpx;
}

.banner {
  width: 100%;
  height: 450rpx;
  overflow: hidden;
}
.slide-image{
  width: 100%;
  height: 100%;
}
/* tab栏*/
.tab_box{
  width: 100%;
  box-sizing: border-box;
  padding: 12rpx 184rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.tab_img{
  width:86rpx;
  height: 86rpx;
  display: block;
  border-radius: 50%;
  margin-bottom: 8rpx;
  background: rosybrown;
}
.tab_tit{
  font-size: 24rpx;
  color: #010101;
  text-align: center;
}
/* 描述 */
.del_img{
  width: 100%;
  height: 404rpx;
  display: block;
  background: rosybrown;
}
/* 联系电话*/
.relation{
  padding: 20rpx 192rpx 40rpx 192rpx;
  font-size: 28rpx;
}
.icondianhua{
  font-size: 28rpx;
  color: #B0ACAA;
}
.phone{
  color: #B0ACAA;
}
.phone_num{
  color: #F48E26;
}
/* 注册 */
.del_box{
  margin-top: 40rpx;
}
.register_item{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.name{
  font-size: 24rpx;
  color: #202020;
  font-weight: bold;
  margin-left: 22rpx;
}
.input{
  width: 444rpx;
  padding: 30rpx 0;
  border-bottom: solid #F7F7F7 .5rpx;
}
.last_i{
  width: 444rpx;
  padding: 30rpx 0;
  font-size: 24rpx;
}
.last_i:last-child{
  display: flex;
  align-items: center;
}
input{
  font-size: 24rpx;
  line-height: 1;
}
.inp_pla{
  color: #D1D1D1;
}
.section{
  color: #D1D1D1;
}
.picker{
  color: #202020;
}
.iconxiangxiajiantoushixin{
  font-size: 18rpx;
  display: inline-block;
  margin-left: 10rpx;
}
.ethnic{
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}
.ethnic_check{
  width: 24rpx;
  height: 24rpx;
  box-sizing: border-box;
  border-radius: 50%;
  border: solid .5rpx #E1E1E1;
  margin-right: 10rpx;
  position: relative;
}
.ethnic_checkout{
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -6rpx;
  margin-top: -6rpx;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}